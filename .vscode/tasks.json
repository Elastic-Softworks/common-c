{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-release",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Builds the library in release mode using the Makefile."
        },
        {
            "label": "build-debug",
            "type": "shell",
            "command": "make debug",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Builds the library in debug mode using the Makefile."
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "group": "build",
            "problemMatcher": [],
            "detail": "Removes all build artifacts."
        },
        {
            "label": "build-windows",
            "type": "shell",
            "command": ".\\build.bat",
            "windows": {
                "command": ".\\build.bat"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Builds the library using the Windows build script."
        },
        {
            "label": "build-unix",
            "type": "shell",
            "command": "./build.sh",
            "linux": {
                "command": "./build.sh"
            },
            "osx": {
                "command": "./build.sh"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Builds the library using the Unix build script."
        }
    ]
}
